<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/scree"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/edtProvince"
            android:layout_marginRight="20dp"
            android:layout_weight="70"
            android:layout_width="0dp"
            android:layout_height="wrap_content"></EditText>
        <Button
            android:id="@+id/btnOK"
            android:text="OK"
            android:layout_weight="30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"></Button>
    </LinearLayout>
    
    <TextView
        android:id="@+id/txtProvince"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:text="Tên thành phố:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:id="@+id/txtNational"
        android:layout_marginTop="10dp"
        android:textStyle="normal"
        android:textSize="20sp"
        android:text="Tên quốc gia:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>
    
    <ImageView
        android:id="@+id/imgWeatherIcon"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/meat"
        android:layout_width="100dp"
        android:layout_height="100dp"></ImageView>

    <TextView
        android:id="@+id/txtTemper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Nhiệt độ"
        android:textColor="#FF1100"
        android:textSize="20sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/txtTemperState"
        android:textStyle="bold"
        android:textColor="#EFB60A"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="Trạng thái"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="100"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="33"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/cloud4"
                android:layout_width="50dp"
                android:layout_height="50dp"></ImageView>
            
            <TextView
                android:id="@+id/txtCloud"
                android:textColor="#001"
                android:textSize="16sp"
                android:text="Mây"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="33"
            android:layout_width="0dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/nhietdo">

            </ImageView>

            <TextView
                android:id="@+id/txtHumidity"
                android:textColor="#001"
                android:textSize="16sp"
                android:text="Độ ẩm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="33"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@drawable/wind"
                android:layout_width="50dp"
                android:layout_height="50dp"></ImageView>

            <TextView
                android:id="@+id/txtWind"
                android:textColor="#001"
                android:textSize="16sp"
                android:text="Gió"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></TextView>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/txtCurenTemper"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textColor="#001"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="Ngày nhiệt độ hiện tại"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    
    <Button
        android:layout_gravity="center"
        android:id="@+id/btnNextDay"
        android:layout_marginTop="20dp"
        android:text="Các ngày tiếp theo"
        android:layout_width="200dp"
        android:layout_height="wrap_content"></Button>

</LinearLayout>
</ScrollView>